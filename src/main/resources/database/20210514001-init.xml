<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20210514-init" author="Mariusz Szmagara">
        <createTable tableName="user">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" />
            </column>
            <column name="first_name" type="varchar(255)">
            </column>
            <column name="last_name" type="varchar(255)">
            </column>
            <column name="date_of_birth" type="date">
            </column>
        </createTable>
        <createTable tableName="recipe">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" />
            </column>
            <column name="title" type="varchar(255)">
            </column>
            <column name="preparation_instructions" type="varchar(5000)">
            </column>
            <column name="category" type="varchar(255)">
            </column>
            <column name="serves" type="integer">
            </column>
            <column name="likes_counter" type="integer">
            </column>
            <column name="preparation_time" type="varchar(255)">
            </column>
        </createTable>
        <createTable tableName="ingredient">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)">
            </column>
            <column name="quantity" type="double">
            </column>
            <column name="measurement" type="varchar(255)">
            </column>
            <column name="recipe_id" type="bigint">
                <constraints nullable="false"
                foreignKeyName="foreign_key_FROM_ingredient_recipeId_TO_recipe_id"
                referencedTableName="recipe"
                referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>